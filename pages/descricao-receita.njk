{% extends "layout.njk" %}

{% block head %}

    <link rel="stylesheet" href="../css/descricao-receita.css">
    <link rel="stylesheet" href="../css/animation.css">

{% endblock head %}

{% block content %}

    <section class="banner">
        <img src="{{ items.image }}" alt="{{ items.title }}"/>
        <h1>{{ items.title }}</h1>
        <p>{{ items.author }}</p>
    </section>

    <main>

        <div class="ingredients">
            <div class="option-ingredients">
                <h2>Ingredientes</h2>
                <p id="btn-ingredients">ESCONDER</p>
            </div>

            <div class="list-ingredients">
                <ul>
                    {% for item in items.ingredients %}
                        <li>{{ item }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="preparation">
            <div class="option-preparation active">
                <h2>Mode de preparo</h2>
                <p id="btn-preparation">ESCONDER</p>
            </div>

            <div class="list-preparation">
                {% for item in items.preparation %}
                    <ul>
                        <li>{{ item }}</li>
                    </ul>
                {% endfor %}
            </div>
        </div>

        <div class="information">
            <div class="option-information active">
                <h2>Informações adicionais</h2>
                <p id="btn-information">ESCONDER</p>
            </div>

            <p class="description">{{ items.information }}</p>

        </div>

    </main>

{% endblock content %}

{% block footer %}

    <footer>
        <p>Todos direitos reservados, receitas Foodfy.</p>
    </footer>

{% endblock footer %}

{% block scripts %}

    <script src="../scripts/scripts.js"></script>

{% endblock scripts %}