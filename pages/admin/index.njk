{% extends "./layout.njk" %}

{% block head %}

    <link rel="stylesheet" href="../../css/admin-styles/index.css">

{% endblock head %}

{% block content %}

    <main>
        <h1>Gerenciar receitas</h1>

        <a id="btn-create" href="/admin/recipes/create">Criar receita</a>
        
        <div class="admin-recipes">

            {% for recipe in recipes %}

                <div class="admin-recipe">
                    <div>
                        <img src="{{ recipe.image }}">
                    </div>
                    <div>
                        <h2>{{ recipe.title }}</h2>
                        <p>{{ recipe.author }}</p>
                        <a id="show-recipe" href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
                    </div>
                </div>

            {% endfor %}

        </div>
    </main>

{% endblock content %}

{% block scripts %}

    <script src="../../../scripts/scripts-admin.js"></script>

{% endblock scripts %}