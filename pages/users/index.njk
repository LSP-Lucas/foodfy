{% extends "./layout.njk" %}

{% block head %}

    <link rel="stylesheet" href="../css/user-styles/index.css">
    <link rel="stylesheet" href="../css/user-styles/animation.css">

{% endblock head %}

{% block content %}

    <section class="banner">
        <div class="description">
            <h1>As melhores receitas</h1>
            <p>Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.</p>
        </div>
        <div class="cheff">
            <img src="../assets/chef.png" alt="Chefe de Cozinha">
        </div>
    </section>

    <main>
        <div>
            <h1>Mais acessadas</h1>
        </div>

        <div class="recipes">

            {% for recipe in recipes %}

                <div class="recipe" id="">
                    <img src="{{ recipe.image }}">
                    <h2>{{ recipe.title }}</h2>
                    <p>{{ recipe.author }}</p>
                </div>

            {% endfor %}

        </div>
    </main>

{% endblock content %}

{% block footer %}

    <footer>
        <p>Todos direitos reservados, receitas Foodfy.</p>
    </footer>

{% endblock footer %}

{% block scripts %}

    <script src="../scripts/scripts.js"></script>

{% endblock scripts %}